<resources>
    <!-- Base application theme. -->
    <style name="CommonAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/common_colorPrimary</item>
        <item name="colorPrimaryDark">@color/common_colorPrimaryDark</item>
        <item name="colorAccent">@color/common_colorAccent</item>
    </style>

    <style name="CommonNoTitleBarTheme" parent="CommonAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CommonSplashTheme" parent="CommonNoTitleBarTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/layer_splash_bg</item>
    </style>

    <style name="CommonFullscreenTheme" parent="CommonNoTitleBarTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/common_trans</item>
    </style>


    <style name="common_style_toolbar">
        <!--        <item name="android:layout_height">?attr/actionBarSize</item>-->
        <item name="android:layout_height">@dimen/common_toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/common_toolbar</item>
    </style>

    <style name="common_style_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">@dimen/common_font_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_style_title_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">@dimen/common_font_text</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="common_style_line">
        <item name="android:layout_height">@dimen/common_line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/common_color_line</item>
    </style>

    <style name="common_style_menu_active">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="common_style_menu_inactive">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CommonDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_trans</item>
    </style>

    <style name="CommonDialogBottomStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/CommonDialogBottomAnim</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_trans</item>
    </style>

    <style name="CommonDialogBottomAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_up</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_down</item>
    </style>

    <style name="common_style_verify_text">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">41dp</item>
        <item name="android:background">@color/common_trans</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/common_color_verify</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="common_style_verify_line">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/common_color_verify</item>
    </style>

    <style name="common_avloading">
        <item name="minWidth">22dip</item>
        <item name="maxWidth">22dip</item>
        <item name="minHeight">22dip</item>
        <item name="maxHeight">22dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

</resources>