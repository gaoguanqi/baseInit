<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="DotView" tools:ignore="ResourceName">
        <attr name="dotColor" format="color|reference"/>
        <attr name="dotStyle" format="enum">
            <enum name="FILL" value="0"/>
            <enum name="STROKE" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="IconTextView" tools:ignore="ResourceName">
        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="textAlignment" format="flags">
            <flag name="center" value="0"/>
            <flag name="left" value="1"/>
            <flag name="right" value="2"/>
        </attr>

        <attr name="src" format="reference"/>
        <attr name="iconShow" format="boolean"/>
    </declare-styleable>
</resources>